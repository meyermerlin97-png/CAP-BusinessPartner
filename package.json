{
  "name": "businesspartner",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@amag-ch/cds-remote": "^5.1.2",
    "@cap-js/cds-test": "^0.4.0",
    "@sap-cloud-sdk/connectivity": "^4.1.2",
    "@sap-cloud-sdk/generator": "^4.1.2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap-cloud-sdk/resilience": "^4.1.2",
    "@sap/cds": "^8",
    "axios": "^1.10.0",
    "better-sqlite3": "^12.4.1",
    "express": "^4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1.11.1",
    "cds-plugin-ui5": "^0.13.0",
    "chai": "4",
    "chai-as-promised": "7",
    "chai-subset": "^1.6.0",
    "jest": "^30.2.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open project1/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-project2": "cds watch --open project2/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-businesspartner": "cds watch --open businesspartner/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-validatebp": "cds watch --open validatebp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-reviewbp": "cds watch --open reviewbp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "[development]": {
          "credentials": {
            "url": "db/my.db"
          }
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER"
      },
      "iban_test": {
        "kind": "rest",
        "credentials": {
          "url": "https://api.ibantest.com/v1/validate_iban"
        }
      },
      "plz_test": {
        "kind": "rest",
        "credentials": {
          "url": "https://zip-api.eu/api/v2/info"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/admin-books",
    "app/browse",
    "app/project1",
    "app/project2",
    "app/businesspartner",
    "app/validatebp",
    "app/reviewbp"
  ]
}
